{
  "build": {
    "nixpacks": {
      "phases": {
        "setup": {
          "aptPkgs": ["python3-dev", "gcc", "libgl1"]
        },
        "install": {
          "cmds": [
            "python -m venv /opt/venv",
            ". /opt/venv/bin/activate",
            "pip install --upgrade pip",
            "pip install -r requirements.txt --no-cache-dir"
          ]
        }
      }
    }
  }
}
